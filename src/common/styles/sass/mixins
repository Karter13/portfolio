@import './variables';

@mixin text($fontFamily, $fontSize, $lineHeight, $color) {
  font-family: $fontFamily;
  font-size: $fontSize;
  line-height: $lineHeight;
  color: $color;
}

@mixin photo($backgroundSize, $backgroundPosition, $backgroundRepeat) {
  background-size: $backgroundSize;
  background-position: $backgroundPosition;
  background-repeat: $backgroundRepeat;
}
